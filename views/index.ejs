                    <td class="px-6"><% var x; %> 
                        <% if(x || panahon[0]['forecast'][4].skytextday == 'Rain Showers' || panahon[0]['forecast'][4].skytextday == 'Rain'){ %> 
                            <i class="fa-solid fa-cloud-showers-water" style="font-size: 5em; color: rgb(115, 115, 255);"></i>
                        <% } else if(x || panahon[0]['forecast'][4].skytextday == 'Cloudy' || panahon[0]['forecast'][4].skytextday == 'Mostly Cloudy'){ %> 
                            <i class="fa-solid fa-cloud" style="font-size: 5em; color: rgb(115, 115, 255);"></i>
                        <% } else if(x ||panahon[0]['forecast'][4].skytextday == 'Sunny' || panahon[0]['forecast'][4].skytextday == 'Mostly Sunny'){ %> 
                            <i class="fa-solid fa-sun" style="font-size: 5em; color: rgb(115, 115, 255);"></i>
                        <% } else if(x || panahon[0]['forecast'][4].skytextday == 'Heavy T-Storms'){ %> 
                            <i class="fa-solid fa-cloud-showers-heavy" style="font-size: 5em; color: rgb(115, 115, 255);"></i>
                        <% } else if(x || panahon[0]['forecast'][4].skytextday == 'Partly Sunny'){ %> 
                            <i class="fa-solid fa-cloud-sun" style="font-size: 5em; color: rgb(115, 115, 255);"></i>
                        <% } else if(x || panahon[0]['forecast'][4].skytextday == 'T-Storms'){ %> 
                            <i class="fa-solid fa-cloud-bolt" style="font-size: 5em; color: rgb(115, 115, 255);"></i>
                        <% } else if(x || panahon[0]['forecast'][4].skytextday == 'Light Rain'){ %> 
                            <i class="fa-solid fa-cloud-rain" style="font-size: 5em; color: rgb(115, 115, 255);"></i>
                        <% } %>
                        <%= x; %></td>
                </tr>
                <tr>
                    <th class="px-6">Today</th>
                    <th class="px-6"><%= panahon[0]['forecast'][1].day %></th>
                    <th class="px-6"><%= panahon[0]['forecast'][2].day %></th>
                    <th class="px-6"><%= panahon[0]['forecast'][3].day %></th>
                    <th class="px-6"><%= panahon[0]['forecast'][4].day %></th>
                </tr>
                <tr>
                    <td class="px-6"><%= dayjs(panahon[0]['current'].date).format('MMM DD, YYYY') %></td>
                    <td class="px-6"><%= dayjs(panahon[0]['forecast'][1].date).format('MMM DD, YYYY') %></td>
                    <td class="px-6"><%= dayjs(panahon[0]['forecast'][2].date).format('MMM DD, YYYY') %></td>
                    <td class="px-6"><%= dayjs(panahon[0]['forecast'][3].date).format('MMM DD, YYYY') %></td>
                    <td class="px-6"><%= dayjs(panahon[0]['forecast'][4].date).format('MMM DD, YYYY') %></td>
                </tr>
                <tr>
                    <td class="px-6"><%= panahon[0]['current'].temperature %>°C</td>
                    <td class="px-6"><%= panahon[0]['forecast'][1].high %>°C</td>
                    <td class="px-6"><%= panahon[0]['forecast'][2].high %>°C</td>
                    <td class="px-6"><%= panahon[0]['forecast'][3].high %>°C</td>
                    <td class="px-6"><%= panahon[0]['forecast'][4].high %>°C</td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>